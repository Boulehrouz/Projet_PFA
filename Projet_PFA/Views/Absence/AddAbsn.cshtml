@model Projet_PFA.Models.Absence
@{
    ViewData["Title"] = "Ajouter Absence";
}

<div class="text-center">
    <h1 class="h4 text-gray-900 mb-4">Ajouter un Absence</h1>
</div>
<form class="user" method="post" action="#">
    <div class="form-group row">
        <div class="col-sm-6 mb-3 mb-sm-0">
            <input max="@DateTime.Now.AddDays(1).Year-@DateTime.Now.AddDays(1).Month-@DateTime.Now.AddDays(1).Day " type="date" class="form-control form-control-user" name="dateAbsn" />
        </div>
    </div>
    <input type="submit" class="btn btn-primary btn-user btn-block" value="Ajouter" />
</form>
