@model Projet_PFA.Models.Retard
@{
    ViewData["Title"] = "Ajouter Retard";
}
@{
    Layout = "FormsTemplate";
}
<div class="text-center">
    <h1 class="h4 text-gray-900 mb-4">Ajouter un Absence</h1>
</div>
<form class="user" method="post" action="#">
    <div class="form-group row">
        <div class="col-sm-6 mb-3 mb-sm-0">
            <input type="date" name="date" class="form-control form-control-user" />
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-6 mb-3 mb-sm-0">
            <input asp-for="Duree" class="form-control form-control-user" /><Label>:Min</Label>
        </div>
    </div>
    <input type="submit" class="btn btn-primary btn-user btn-block" value="Ajouter" />
</form>
