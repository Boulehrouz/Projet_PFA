@model List<Projet_PFA.Models.Retard>
@{
    ViewData["Title"] = "Liste Retard";
}
<h3 class="Title">Liste Retard</h3>
<div class="table-responsive">
    <table class="table">
        <tr>
            <th>id </th>
            <th>Date </th>
            <th>Duree</th>
            <th>SuperviseurId</th>
            <th>EmployeId</th>
            <th>Modifier</th>
            <th>Supprimer</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Date</td>
                <td>@item.Duree</td>
                <td>@item.SuperviseurId</td>
                <td>@item.EmployerId</td>
                <td>
                    <a asp-controller="Retard" asp-action="Update" asp-route-id="@item.Id">Modifier</a>
                </td>
                <td>
                    <a onclick="return confirm('Etes vous sur de vouloir supprimer?');" asp-controller="Retard" asp-action="delete" asp-route-id="@item.Id">Supprimer</a>
                </td>
            </tr>
        }
    </table>
    </div>
<style>
    .Title {
        text-align: center;
        color: #000000;
        text-decoration: underline;
        margin-bottom: 40px;
    }
</style>