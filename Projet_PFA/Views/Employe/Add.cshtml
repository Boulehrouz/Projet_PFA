@model Projet_PFA.Models.Employer

@{
    ViewData["Title"] = "Ajouter Employe";
}
<div class="text-center">
    <h1 class="h4 text-gray-900 mb-4">Ajouter un employer</h1>
</div>
<form class="user" method="post" action="#">

    <div class="form-group">
        <input asp-for="Login" class="form-control form-control-user" 
               placeholder="Login">
    </div>
    <div class="form-group row">
        <div class="col-sm-6 mb-3 mb-sm-0">
            <input asp-for="Password" class="form-control form-control-user"
                   id="exampleInputPassword" placeholder="Password">
        </div>
        <div class="col-sm-6">
            <input asp-for="ConfirmerPassword" class="form-control form-control-user"
                   id="exampleRepeatPassword" placeholder="Repeat Password">
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-6 mb-3 mb-sm-0">
            <input asp-for="Prenom" class="form-control form-control-user" id="exampleFirstName"
                   placeholder="Prénom">
        </div>
        <div class="col-sm-6">
            <input asp-for="Nom" class="form-control form-control-user" id="exampleLastName"
                   placeholder="Nom">
        </div>
    </div>
    <div class="form-group">
        <input asp-for="DateNaissance" class="form-control form-control-user" id="exampleInputDateNaissance">
    </div>
    <div class="form-group">
        <input asp-for="CIN" class="form-control form-control-user" placeholder="CIN">
    </div>
    <div class="form-group">
        <input asp-for="Adress" class="form-control form-control-user" id="exampleInputAddress"
               placeholder="Address">
    </div>
    <div class="form-group">
        <input asp-for="Tel" class="form-control form-control-user" id="exampleInputTelephone"
               placeholder="Telephone">
    </div>
    <div class="form-group">
        <input asp-for="RIB" class="form-control form-control-user" 
               placeholder="RIB">
    </div>
    <div class="form-group">
        <input asp-for="Salaire" class="form-control form-control-user" id="exampleInputSalaire"
               placeholder="Salaire">
    </div>

    <input type="submit" class="btn btn-primary btn-user btn-block" value=" Ajouter ">
    
</form>