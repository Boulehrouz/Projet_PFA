@model List<Projet_PFA.Models.Supplementaire>
@{
    ViewData["Title"] = "Liste Prime";
}
@{
    Layout = "FormsTemplate";
}

<table class="table">
    <tr>
        <th>id </th>
        <th>Duree </th>
        <th>Prime</th>
        <th>Unite</th>
        <th>Modifier</th>
        <th>Supprimer</th>
    </tr>
    @foreach (var item in Model)//Model radi tjibla la liste li raha mdowzinha f return view
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Duree</td>
            <td>@item.Prime</td>
            <td>@item.Unite</td>
            <td>
                <a asp-controller="Supplementaires" asp-action="Update" asp-route-id="@item.Id">Modifier</a>
            </td>
            <td>
                <a asp-controller="Supplementaires" asp-action="delete" asp-route-id="@item.Id">Supprimer</a>
            </td>
        </tr>

    }
</table>