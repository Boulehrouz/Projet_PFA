@model List<Projet_PFA.Models.Supplementaire>
@{
    ViewData["Title"] = "Liste Supplementaire";
}

<h3 class="Title">Liste Supplementaire</h3>
<div class="table-responsive">
<table  class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
        <tr>
            <th>id </th>
            <th>Duree </th>
            <th>Prime</th>
            <th>Unite</th>
            <th>Modifier</th>
            <th>Supprimer</th>
        </tr>
        @foreach (var item in Model)//Model radi tjibla la liste li raha mdowzinha f return view
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Duree</td>
                <td>@item.Prime</td>
                <td>@item.Unite</td>
                <td>
                    <a asp-controller="Supplementaires" asp-action="Update" asp-route-id="@item.Id">Modifier</a>
                </td>
                <td>
                    <a asp-controller="Supplementaires" asp-action="delete" asp-route-id="@item.Id">Supprimer</a>
                </td>
            </tr>

        }
    </table>
    </div>
<style>
    .Title {
        text-align: center;
        color: #000000;
        text-decoration: underline;
        margin-bottom: 40px;
    }
</style>





